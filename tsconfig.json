{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "target": "ES2016",
    "module": "CommonJs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@schemas/*": ["schemas/*"],
      "@db/*": ["db/*"],
      "@errors/*": ["errors/*"],
      "@hashmaps/*": ["hashmaps/*"],
      "@helpers/*": ["helpers/*"],
      "@managers/*": ["managers/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@validations/*": ["validations/*"]
    }
  },
  "include": ["src"]
}
